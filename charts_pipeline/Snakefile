#

configfile: 'config.json'

TUMORS = [
    'PJ016',
    'PJ017',
    'PJ018',
    'PJ025',
    'LX653',
    'LX676',
    'LX682',
    'GSE146026.5'
]
ALIGN_TUMORS = []
for i in range(len(TUMORS)-1):
    for j in range(i+1,len(TUMORS)):
        ALIGN_TUMORS.append(
            (TUMORS[i], TUMORS[j])
        )

rule cluster:
    input:
        '../../charts.h5'
    output:
        'cluster_log.txt'
    run:
        #cmd='python cluster.py -w -r 4.0 {input}'
        cmd='python cluster.py -r 4.0 {input}'
        shell(cmd)

rule dim_reduc:
    input:
        '../../charts.h5'
    run:
        cmd='python dim_reduc_per_tumor.py {input}'
        shell(cmd)


rule cell_type:
    input:
        '../../charts.h5'
    run:
        #cmd='python cell_type_classification.py -w {input}'
        cmd='python cell_type_classification.py {{input}} {tmp}/cello_models'.format(
            tmp=config['tmp_dir']
        )
        shell(cmd)


rule gsva_cancersea:
    input:
        '../../charts.h5'
    run:
        #cmd='python gsva.py -w {input} ./gene_sets/CancerSEA.gmt cancersea'
        cmd='python gsva.py {{input}} {db_loc}/gene_sets/CancerSEA.gmt cancersea'.format(
            db_loc=config['db_loc']
        )
        shell(cmd)        


rule gsva_hallmark:
    input:
        '../../charts.h5'
    run:
        #cmd='python gsva.py -w {input} ./gene_sets/h.all.v7.1.symbols.gmt hallmark'
        cmd='python gsva.py {input} {db_loc}/gene_sets/h.all.v7.1.symbols.gmt hallmark'.format(
            db_loc=config['db_loc']
        )
        shell(cmd)


rule integration:
    input:
        '../../charts.h5'
    run:
        cmds=[
            'python integration.py {tum_1} {tum_2} {{input}}'.format(
                tum_1=tum_pair[0],
                tum_2=tum_pair[1]
            ) 
            for tum_pair in ALIGN_TUMORS
        ]
        for c in cmds:
            shell('echo "{}"'.format(c))
            shell(c)


rule classify_malignant_glioma:
    input:
        '../../charts.h5'
    run:
        c='python classify_malignant.py -w -l {log}/log ../../charts.h5 PJ016,PJ017,PJ018,PJ025,PJ030,PJ032,PJ035,PJ048 GSE103224'.format(
            config['log_dir']
        )
        shell('echo "{}"'.format(c))
        shell(c)


