rule gsva_compare_cluster_hallmark:
    input:
        '{}/charts.h5'.format(config['db_loc'])
    run:
        c = 'python gsva_compare_clust.py {{input}} hallmark {db_loc}/gene_sets/h.all.v7.1.symbols.gmt'.format(
            db_loc=config['db_loc']
        )
        shell('echo "{}"'.format(c))
        shell(c)
